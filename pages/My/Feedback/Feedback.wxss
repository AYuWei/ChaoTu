}
.wrapper .coment{
      position: relative;
      height: 580rpx; 
      background: rgba(111, 111, 111, .5);
}
.wrapper textarea{  
      width: auto ;
      height: 530rpx; 
      border-radius: 5rpx;
      padding: 16rpx;
      font-size: 32rpx;
      color: rgba(222, 222, 222, .9);
      line-height: 50rpx;
}
.wrapper .word{
      position: absolute;
      bottom: 16rpx;
      font-size: 24rpx;
      right: 32rpx;
      color: rgba(222, 222, 222, .4);

}
.wrapper .but{
      width: 100%;  
      margin-top: 50rpx;
}
.wrapper .but button{
      width: 100%;
}