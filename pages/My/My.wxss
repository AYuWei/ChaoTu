.wrapper{
      height: 100%;
}
.wrapper .wrapper-item{
      min-height: 150rpx; 
      /* background: rgba(222, 222, 222, 0.1); */
      margin: 32rpx 0rpx;  
} 
.wrapper .wrapper-item.i{
      min-height: 150rpx;  
      margin: 64rpx 0rpx;  
}  
.item-head{
      width: 150rpx;
      height: 150rpx;
      margin: auto;
      border-radius: 50%;
      border: 1rpx solid rgba(248, 248, 248, 0.2);
}
.item-head text{
      display: inline-block;
      width: 100%;
      height: 100%;
      text-align: center;
      line-height: 150rpx;
      background:  rgba(248, 248, 248, 0.2);
      color:  rgba(248, 248, 248, 0.8);
      border-radius: 50%;
      font-size: 28rpx;
}
.item-head image{
      width: 100%;
      height: 100%;
      border-radius: 50%;
}

.item-list{
      margin: 0rpx 32rpx;
      height: 100rpx;    
      display: flex;
      line-height: 120rpx;
      padding: 0rpx 16rpx;
      justify-content: space-between;
      font-size: 32rpx; 
      color: rgba(248, 248, 248, 0.6);
      /* background: rgb(114, 114, 114); */
      margin-top: 20rpx;
      box-shadow: 0rpx 1rpx rgba(222, 222, 222, 0.2) ; 
}
.item-list .text{
      display: flex;
}
.item-list .text .img{  
      padding-top: 4rpx;
      padding-right: 16rpx;
}
.item-list image{ 
      width: 30rpx;
      height: 30rpx;
}
.item-list .icon{
      color: rgba(248, 248, 248, 0.2) ;
}
 